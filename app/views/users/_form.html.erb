<div class="col-lg-5">

<%= form_for(@user, multipart: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :bio %>
    <%= f.text_area :bio, class: "form-control", rows: 3 %>
  </div>
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-default" %>
  </div>
<% end %>
  
</div>

<div class="col-lg-7">
  <label>Web Links</label>

  <% WebLink::SITES.each do |site| %>
    <%= render partial: "web_links/web_link", locals: {site:site, web_link: get_new_or_existing_web_link(site, @user)} %>
  <% end %>

</div>
