<div class="container">
  <h1 class="text-center">Students of <%= current_user.courses.map(&:name).to_sentence %></h1>
  <br />
  <div class="row">
    <div class="col-lg-6 col-md-6">
      <div class="col-lg-12 col-md-12 well">
        <h3>Holistic MBA</h3>
        <p><a href="<%= user_path(kats_id) %>">Profile Link</a></p>
        <%= render partial: "testimonials/form", locals: {user_id: kats_id} %>
      </div><!-- col-lg-12 -->
    </div><!-- col-lg-6 -->
    <div class="col-lg-6 col-md-6">
      <div class="col-lg-12 col-md-12 well">
        <img src="http://katwebdesigns.co/img/KatTransparentLogo.png" width="20%" align="right" alt="">
        <h3>Kat Web Designs</h3>
        <p><a href="<%= user_path(kats_id) %>">Profile Link</a></p>
        <%= render partial: "testimonials/form", locals: {user_id: kats_id} %>
      </div><!-- col-lg-12 -->
    </div><!-- col-lg-6 -->
  </div><!-- row -->

  <div class="row">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#alphabetical" data-toggle="tab">User's Alphabetical</a></li>
      <li><a href="#newest" data-toggle="tab">Newest Users</a></li>
      <li><a href="#top" data-toggle="tab">Top Users (Most Testimonials Given)</a></li>
      <li><a href="#recommended" data-toggle="tab">Recommended Users</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane active" id="alphabetical">
        <br />
        <% @alphabetical.each do |user| %>
          <%= render partial: "users/user", locals: { user: user } %>
        <% end %>
      </div>
      <div class="tab-pane" id="newest">
        <br />
        <% @newest.each do |user| %>
          <%= render partial: "users/user", locals: { user: user } %>
        <% end %>
      </div>
      <div class="tab-pane" id="top">
        <br />
        <% @top.each do |user| %>
          <%= render partial: "users/user", locals: { user: user } %>
        <% end %>
      </div>
      <div class="tab-pane" id="recommended">
        <br />
        <% @recommended.each do |user| %>
          <%= render partial: "users/user", locals: { user: user } %>
        <% end %>
      </div>
    </div>
  </div>
</div><!-- container -->